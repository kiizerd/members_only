<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.label :title, class: 'label' %>
      <%= f.input_field :title, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body,
                  as: :text,
                  wrapper: false,
                  label_html: { class: 'label' },
                  input_html: { class: 'textarea' } %>            
    </div>
  </div>
  
  <div class="field">
    <div class="control">
      <%= f.button :submit, 'Create Post', class: 'button is-success' %>            
    </div>
  </div>

<% end %>
