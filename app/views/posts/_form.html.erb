<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
      <%= f.label :title, class: 'label' %>
      <%= f.input_field :title, class: 'input' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :body,
                  as: :text,
                  wrapper: false,
                  label_html: { class: 'label' },
                  input_html: { class: 'textarea' } %>            
    </div>
  </div>
  
  <div class="field is-pulled-left py-2">
    <div class="control">
      <% submit_btn_text = current_page?(controller: 'posts', action: 'new') ? 'Create ' : 'Edit ' %>
      <%= f.button :submit, submit_btn_text + 'Post', class: 'button is-success' %>
    </div>
  </div>

<% end %>
