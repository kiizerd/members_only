<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <header class="card-header py-2 is-primary">
            <p class="card-header-title is-size-3">
              <%= @post.title.titleize %>
            </p>
          </header>
          
          <div class="card-content">
            <%= @post.body %>          
          </div>

        </div>

        <div class="control is-pulled-right">
          <div class="field">
            <%= link_to 'Edit', edit_post_path(@post), class: 'button small is-primary' %>
            <%= link_to 'Back', posts_path, class: 'button small is-success' %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>