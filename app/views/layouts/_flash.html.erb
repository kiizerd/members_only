<div class="section notification-wrapper">
  <% if flash[:notice] %>
    <div class="notification is-primary">
      <button class="delete"></button>
      <p class='notice'><%= notice %></p>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="notification is-danger">
      <button class="delete"></button>
      <p class='alert'><%= alert %></p>
    </div>
  <% end %>
</div>